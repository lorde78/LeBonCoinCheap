{% extends 'base.html.twig' %}


{# Faire un foreach de la variable articles #}


{% block content %}

    <h1>{{ tagName }}</h1>

{% for article in articles %}

    <ul
		class="produit_card_list">
		<li class="produit_card_wrapper">
			<img src="{{ article.pictures[0] }}" alt="">
			<div class="produit_card_tag">
				{{ article.idTag.name }}
			</div>
			<div class="produit_card_spec">
				<h3>{{ article.title }}</h3>
				<div class="produit_card_detail">
					<span>Saint-Lô -</span>
					<span>2015 -</span>
					<span>170500 km -</span>
					<span>Diesel</span>
				</div>
				<span class="produit_card_price">{{ article.price }} €</span>
				<span class="produit_card_date">{{ article.createdAt|date('d-m-Y H:i:s')}} par <a href="">{{ article.idUser.nickName }}</a></span>

				<a href="" class="btn_read_more">
					<span>Lire plus</span>
				</a>
			</div>
		</li>
	</ul>
{% endfor %}

    {{ knp_pagination_render(articles) }}

{% endblock  %}

